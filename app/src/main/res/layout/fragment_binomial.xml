<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bz.hemmers.android.statistik.BinomialFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/binomial_n"
            android:hint="Anzahl Versuche n"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/binomial_p"
            android:hint="Wahrscheinlichkeit p"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/binomial_k"
            android:hint="Anzahl Erfolge k"
            android:inputType="numberDecimal" />

        <Button
            android:text="Abschicken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/binomial_button" />

        <TextView
            android:text="Ergebnis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/binomial_ergebnis"
            android:textSize="20dp"/>

    </LinearLayout>

</FrameLayout>
